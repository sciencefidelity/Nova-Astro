{
  "identifier": "sciencefidelity.astro",
  "name": "Astro",
  "organization": "Matt Cook",
  "description": "Language support for Astro.js.",
  "version": "0.3.1",
  "categories": [
    "completions",
    "formatters",
    "issues",
    "languages"
  ],
  "license": "MIT",
  "repository": "https://github.com/sciencefidelity/Nova-Astro",
  "bugs": "https://github.com/sciencefidelity/Nova-Astro/issues",
  "homepage": "https://mattcook.dev",
  "keywords": [
    "astro",
    "vue",
    "react",
    "preact",
    "svelte",
    "lit",
    "solid",
    "alpine"
  ],
  "main": "main.dist.js",
  "activationEvents": [
    "onLanguage:astro",
    "onWorkspaceContains:astro.config.mjs",
    "onWorkspaceContains:astro.config.js"
  ],
  "entitlements": {
    "process": true,
    "filesystem": "readwrite"
  },

  "config": [
    {
      "key": "sciencefidelity.astro.config.enableLsp",
      "title": "Enable Language Server",
      "type": "boolean",
      "default": true
    }
  ],

  "configWorkspace": [
    {
      "key": "sciencefidelity.astro.config.enableLsp",
      "title": "Enable Language Server",
      "type": "enum",
      "values": [
        ["null", "Inherit from Global Settings"],
        ["false", "Disable"],
        ["true", "Enable"]
      ],
      "default": "null"
    }
  ],

  "commands": {
    "extensions": [
      {
        "title": "Preferences",
        "command": "sciencefidelity.astro.openWorkspaceConfig"
      },
      {
        "title": "Restart Server",
        "command": "sciencefidelity.astro.reload"
      },
      {
        "title": "Force Unlock Dependency Installation",
        "command": "sciencefidelity.astro.forceClearLock"
      }
    ]
  }
}
